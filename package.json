{
  "name": "ngx-portal",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run watch",
    "watch": "ng serve --hmr",
    "watch:jit": "ng serve --hmr --aot false",
    "backend:mock": "node mock/server.js",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "lint:code": "ng lint",
    "lint:styles": "stylelint src/**/*.scss",
    "lint": "run-s lint:code lint:styles",
    "validate:ts": "tsc --project tsconfig.json --noEmit",
    "validate": "run-s validate:ts lint",
    "doc": "compodoc -p src/tsconfig.app.json --silent --output docs",
    "compile:production": "ng build --prod",
    "build:production": "run-s validate lint test:coverage compile:production doc",
    "serve:production": "ws --port 8080  --compress --directory dist/ngx-portal --spa index.html",
    "stats:production": "webpack-bundle-analyzer dist/ngx-portal/stats.json",
    "commit": "git-cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.0-beta.6",
    "@angular/common": "^7.0.0-beta.6",
    "@angular/compiler": "^7.0.0-beta.6",
    "@angular/core": "^7.0.0-beta.6",
    "@angular/forms": "^7.0.0-beta.6",
    "@angular/http": "^7.0.0-beta.6",
    "@angular/platform-browser": "^7.0.0-beta.6",
    "@angular/platform-browser-dynamic": "^7.0.0-beta.6",
    "@angular/pwa": "^0.9.0-beta.4",
    "@angular/router": "^7.0.0-beta.6",
    "@angular/service-worker": "^7.0.0-beta.6",
    "core-js": "^2.5.4",
    "normalize.css": "^8.0.0",
    "rxjs": "~6.3.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.9.0-beta.4",
    "@angular/cli": "^7.0.0-beta.4",
    "@angular/compiler-cli": "^7.0.0-beta.6",
    "@angular/language-service": "^7.0.0-beta.6",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@compodoc/compodoc": "^1.1.5",
    "@types/node": "^10.10.3",
    "clone": "^2.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.0-rc.15",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "json-server": "^0.14.0",
    "jsonwebtoken": "^8.3.0",
    "lint-staged": "^7.3.0",
    "local-web-server": "^2.6.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "ts-jest": "^23.10.1",
    "tslint": "~5.11.0",
    "tslint-angular": "^1.1.2",
    "tslint-language-service-ts3": "^1.0.0",
    "typescript": "~3.0.1",
    "webpack-bundle-analyzer": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && run-s validate",
      "pre-push": "run-s build:production"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
